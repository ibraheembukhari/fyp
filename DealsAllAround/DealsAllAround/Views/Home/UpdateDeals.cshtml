
@{
    ViewData["Title"] = "UpdateDeals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Home" asp-action="UpdateData" method="post">
    <div class="text">Add Your Deals And Promotion</div>
    <br /><br />
    <div class="row">
